<div class="background-image"> <%= image_tag "9.jpg", :class => "img-fluid" %> </div>

<div class="restaurant-description-container">
    <div class="restaurant-info">
        <h1 class="restaurant-name" ><%= @restaurant.name %></h1>

        <div class="card-body info-card">
            <div class="restaurant-attributes">
                <span><%= @number_of_reviews %> Reviews</span>
                <span>üìç<%= @restaurant.neighborhood %></span>
                <span>üç¥<%= @restaurant.cuisine %></span>
                <span>üí∏<%= @restaurant.price_range%></span>
            </div>

            <div class="restaurant-description">
                <h4 class="restaurant-show-h4s">Restaurant description</h4>
                <p><%= @restaurant.description %></p>
            </div>
        </div>

        <div class="reservation-button-container">
            <button type="button" class="btn btn-outline-primary new-reservation-button"><%= link_to "Create Reservation", new_reservation_path(:restaurant_id => @restaurant.id)  %></button>
        </div>

        <div class="card-body review-card">
            <h4 class="restaurant-show-h4s">Restaurant reviews</h4>
            <% if @reviews%>
                <% @reviews.each do |review| %>
                    <div class="review-card">
                        <div class= "attribute_container" >
                            <div class= "attribute_container_item">
                                <p style= "font-size: 2em; border-right: solid 0.25px black;"><%= review.food_rating%></p>
                                <p> Food </p>
                            </div>
                            <div class= "attribute_container_item">
                                <p style="font-size: 2em; border-right: solid 0.25px black;"><%= review.decor_rating%></p>
                                <p>Decor </p>
                            </div>
                            <div class= "attribute_container_item">
                                <p style= "font-size: 2em; border-right: solid 0.25px black;"><%= review.service_rating%></p>
                                <p>Service </p>
                            </div>
                        </div>

                        <div class="review-card-rating-container">
                            <p class= "review-card-rating">Overall Rating: <% review.average_rating.times do%>
                                    ‚≠ë
                                <% end %>
                            </p>
                        </div>

                        <div class="review-user-details">
                            <i><span> <%= review.reservation.user.name %>  </span></i>
                            <i><span> dined on <%= review.reservation.reservation_date %> </span></i>
                        </div>

                        <p class="restaurant-review-description"><%= review.description %></p>
                    </div>
                <% end %>
            <% else %>
                <p>There are no reviews yet!</p>
            <% end %>
        </div>
    </div>
</div>





